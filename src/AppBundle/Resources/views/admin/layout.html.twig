{% extends 'AppBundle::base.html.twig' %}

{% block title %}Administration panel{% endblock %}

{% block layout %}

    <div class="container-fluid">

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('admin_default') }}">Administration panel</a>
                </div>
                {% if app.user and is_granted("ROLE_ADMIN") %}
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="{{ path('admin_categories') }}">Categories</a></li>
                            <li><a href="{{ path('admin_news') }}">News</a></li>
                            <li><a href="{{ path('admin_comments') }}">Comments</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="{{ path('logout') }}">Logout</a></li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </nav>

        <div class="container">
            {% block content %}{% endblock %}
        </div>

    </div>

{% endblock %}