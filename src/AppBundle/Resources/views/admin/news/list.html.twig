{% extends 'AppBundle:admin:layout.html.twig' %}

{% block title %}Articles list{% endblock %}

{% block content %}

    <h1>Articles list</h1>

    <p><a href="{{ path('admin_news_create') }}">Create new article</a></p>

    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Is active</th>
            <th>Created at</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <th><a href="{{ path('admin_news_update', {'id': article.id}) }}">{{ article.title }}</a></th>
                <th>{{ article.category.title }}</th>
                <th>{% if article.isActive==true %} Published {% else %} Hidden {% endif %}</th>
                <th>{{ article.createdAt|date("Y-m-d H:i") }}</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <nav>
        {% if paginator.getTotalPages() > 1 %}
            {% for i in 1..paginator.getTotalPages() %}
                {% if i == paginator.getCurrentPage() %}
                    <strong>{{ i }}</strong>
                {% else %}
                    <a href="{{ path('admin_news', {'page': i}) }}">{{ i }}</a>
                {% endif %}
                &nbsp;&nbsp;
            {% endfor %}
        {% endif %}
    </nav>

{% endblock %}